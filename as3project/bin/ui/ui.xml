					</HBox>
					<HBox >
						<Label text="CORNER RADIUS" />
						<InputText width="30" text="0" />
						
					</HBox>					
				</VBox>	
				
				<VBox spacing="10"> 
					<HBox >
						<RadioButton width="40" label="PNG" />
						<RadioButton width="40" label="JPG" />
						<RadioButton width="40" label="PDF" />
						<RadioButton width="40" label="SVG" />
					</HBox>
					<HBox >
						<Label text="WIDTH" />
						<InputText width="43" />
						<Label text="HEIGHT" />
						<InputText width="43" />
					</HBox>					
					<PushButton label="EXPORT TREEMAP" width="170" height="35" />
