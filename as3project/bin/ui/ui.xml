<?xml version="1.0" encoding="utf-8" ?>
<comps>
	<Panel x="30" y="60" width="200" height="800">
			<VBox spacing="30">
	
				<VBox spacing="10"> 
					<PushButton label="IMPORT DATA" width="170" height="35" />
					<HBox spacing="5">
						<VBox spacing="7">
							<Label width="50" text="Label"/>
							<Label width="50" text="Weight"/>
							<Label width="50" text="Id"/>
							<Label width="50" text="Parent-Id"/>
						</VBox>
						<VBox spacing="6">
							<ComboBox width="115" />
							<ComboBox width="115" />
							<ComboBox width="115" />
							<ComboBox width="115" />
						</VBox>
					</HBox>
				</VBox>
				
				<VBox spacing="10"> 
					
					<HBox spacing="5">
						<VBox spacing="7">
							<Label width="50" text="Layout"/>
							<Label width="50" text="Labels"/>
							<Label width="50" text="Color"/>
						</VBox>
						<VBox spacing="6">
							<ComboBox width="115" numVisibleItems="3" id="layoutselect"/>
							<HBox>
								<ComboBox width="55" numVisibleItems="4" id="label-v"/>
								<ComboBox width="55" numVisibleItems="3" id="label-h"/>		
